#export PYTHONPATH=$HOME/usr/lib/python2.7/site-packages

python sub_and_send.py &
PY_PID=$!
echo "PY_PID="$PY_PID
sleep 0.5
vlc udp://@:56492
kill -s INT $PY_PID
sleep 2
kill $PY_PID
